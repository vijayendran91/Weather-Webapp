    <script type="text/javascript">
      google.charts.load('current', {'packages':['corechart']});
      google.charts.setOnLoadCallback(drawChart);

      function drawChart() {
        var data = google.visualization.arrayToDataTable([
          ['Date', 'Temperature (in Celcius)','Wind(mps)'],
	  <% @list.each do |datum|%>
          ['<%=((Time.at(datum['dt'])).strftime("%d")).to_s%>',<%=((datum['main']['temp'])-273).round%>,<%=(datum['wind']['speed'])%>],
          <%end%>
        ]);

        var options = {
          title: 'Temperature analysis of Town/City of <%=@data_hash['name']%>',
          curveType: 'function',
          legend: { position: 'bottom' }
        };

	var data1 = google.visualization.arrayToDataTable([
          ['Date', 'Temperature (in Celcius)','Wind(mps)'],
	  <% @list.each do |datum|%>
          ['<%=((Time.at(datum['dt'])).strftime("%d")).to_s%>',<%=((datum['main']['temp'])-273).round%>,<%=(datum['wind']['speed'])%>],
          <%end%>
        ]);

        var options1 = {
          title: 'Temperature analysis of Town/City of <%=@data_hash['name']%>',
          curveType: 'function',
          legend: { position: 'bottom' }
        };

	var chart1 = new google.visualization.LineChart(document.getElementById('curve_chart'));
        chart1.draw(data1, options1);


        var chart = new google.visualization.LineChart(document.getElementById('curve_chart'));
        chart.draw(data, options);

      }
    </script>
    




