                                 </tr>
                                 <tr>
                                    <td >Minimum Temperature</td>
                                    <td ><%=(@main['temp_min']-273.0).round%></td>
                                 </tr>
                                 <tr>
                                    <td >Maximum Temperature</td>
                                    <td ><%=(@main['temp_max']-273.0).round%></td>
                                 </tr>
                                 <td >Pressure</td>
                                 <td ><%=@main['pressure']%> hPa</td>
                                 </tr>
                                 </tr>
                                 <td >Wind Speed</td>
                                 <td ><%=@data_hash['wind']['speed']%> mps</td>
                                 </tr>
                                 </tr>
